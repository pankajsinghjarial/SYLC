<config>
    <modules>
        <Mage_Contacts>
            <version>1.6.0.0</version>
        </Mage_Contacts>
    </modules>
    <frontend>
        <routers>
            <contacts>
                <use>standard</use>
                <args>
                    <module>Mage_Contacts</module>
                    <frontName>contacts</frontName>
                </args>
            </contacts>
        </routers>
        <translate>
            <modules>
                <Mage_Contacts>
                    <files>
                        <default>Mage_Contacts.csv</default>
                    </files>
                </Mage_Contacts>
            </modules>
        </translate>
        <layout>
            <updates>
                <contact>
                    <file>contacts.xml</file>
                </contact>
            </updates>
        </layout>
    </frontend>
    <global>
		<models>
            <contacts>
				<class>Mage_Contacts_Model</class>
				<resourceModel>contacts_mysql4</resourceModel>		
            </contacts>
            <contacts_mysql4>
                <class>Mage_Contacts_Model_Mysql4</class>
                <entities>
                    <contacts>
                        <table>contact_details</table>
                    </contacts>
                </entities>                
            </contacts_mysql4>
        </models>
        <resources>
            <contacts_setup>
                <setup>
                    <module>Mage_Contacts</module>
                </setup>
            </contacts_setup>
			<contacts_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </contacts_read>            
            
            <contacts_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </contacts_write>  
        </resources>
        <template>
            <email>
                <contacts_email_email_template translate="label" module="contacts">
                    <label>Contact Form</label>
                    <file>contact_form.html</file>
                    <type>text</type>
                </contacts_email_email_template>
            </email>
        </template>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <Mage_Contacts>
                    <files>
                        <default>Mage_Contacts.csv</default>
                    </files>
                </Mage_Contacts>
            </modules>
        </translate>
    </adminhtml>

    <default>
        <contacts>
            <contacts>
                <enabled>1</enabled>
            </contacts>
            <email>
                <recipient_email><![CDATA[hello@example.com]]></recipient_email>
                <sender_email_identity>custom2</sender_email_identity>
                <email_template>contacts_email_email_template</email_template>
            </email>
        </contacts>
    </default>
</config>
